	keywords = {Brain–computer interfacing, Interpretability, Neural networks},
	pages = {141--145},
	file = {ScienceDirect Full Text PDF:C\:\\Users\\noam\\Zotero\\storage\\35X8UH82\\Sturm et al. - 2016 - Interpretable deep neural networks for single-tria.pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\noam\\Zotero\\storage\\BD6FKKLK\\S0165027016302333.html:text/html},
}

